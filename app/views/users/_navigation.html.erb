      <% else %>
        <li><%= link_to image_tag("sign-in-with-twitter.png", alt: "Sign in with Twitter"), "/auth/twitter" %></li>
        <li><%= link_to image_tag("sign-in-with-facebook.png", alt: "Sign in with Facebook"), "/auth/facebook" %></li>
      <% end %>
    </ul>
  </section>
</nav>
