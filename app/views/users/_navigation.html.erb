<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1>Crunch-Mate</h1>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <% if current_user %>
        <li class="divider"></li>
        <li class="has-form">Signed in as <strong><%= link_to current_user.username.capitalize %></strong></li>
