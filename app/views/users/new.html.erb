<form>
  <fieldset>
    <legend> Sign Up </legend>
                <div class="row">
                    <div class="large-6 columns">  
                        <%= link_to image_tag("social_tw.png", alt: "Sign in with Twitter"), "/auth/twitter" %>
                        <%= link_to image_tag("social_fb.png", alt: "Sign in with Facebook"), "/auth/facebook" %>
                    </div>
                </div>
              <%= form_for(@user) do |f| %>
                <div class="row">
                    <div class="large-6 columns">
                        <label>Username</label>
                        <%= f.text_field :username, :value=>"",:placeholder => "Username", :autofocus => true%>
                    </div>
                </div>
                <div class="row">
                    <div class="large-6 columns">
                        <label>Email</label>
                        <%= f.email_field :email, :value=>"",:placeholder => "your@email.com"%>
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="large-6 columns">
                        <label>Password</label>
                        <%= f.password_field :password, :value=>"",:placeholder => "Password" %>
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="large-6 columns">
                        <label>Confirm Password</label>
                        <%= f.password_field :password_confirmation, :value=>"",:placeholder => "Password Confirmation" %>
                    </div>
                </div>

                <div class="row">
                    <div class="large-6 columns">
                        <%= f.button "Sign up" %>
                    </div>
                </div>

              <% end %>
    </fieldset>
</form>


  


