<nav class="top-bar" id="tops">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "CrunchMate", "/home" %></h1>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <% if current_user %>
        <li class="divider"></li>
        <li class="has-form">Signed in as <strong><%= link_to current_user.username.capitalize, "/home" %></strong></li>
        <li class="has-form"><%= link_to "Sign out", signout_path %></li>
      <% else %>
        <li><%= link_to image_tag("social_tw.png", alt: "Sign in with Twitter", :width => 154, :height => 22), "/auth/twitter" %></li>
        <li><%= link_to image_tag("social_fb.png", alt: "Sign in with Facebook", :width => 154, :height => 22), "/auth/facebook" %></li>
      <% end %>
    </ul>
  </section>
</nav>
